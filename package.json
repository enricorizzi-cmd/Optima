{
  "name": "optima-production-fullstack",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "20.x"
  },
  "workspaces": [
    "app",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w backend\" \"npm run dev -w app\"",
    "build": "npm run build -w backend && npm run build -w app",
    "start": "concurrently \"npm run start -w backend\" \"npm run start -w app\"",
    "lint": "npm run lint -w backend && npm run lint -w app",
    "test": "npm run test -w backend && npm run test -w app",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "migrate": "node scripts/migrate.js",
    "update-backend-url": "node scripts/update-backend-url.js"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/static": "^8.0.1",
    "@supabase/supabase-js": "^2.45.0",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "fastify": "^4.26.3",
    "fastify-plugin": "^4.5.1",
    "fastify-type-provider-zod": "^2.1.0",
    "pino": "^8.17.0",
    "web-push": "^3.6.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "prettier": "^3.2.5"
  }
}
